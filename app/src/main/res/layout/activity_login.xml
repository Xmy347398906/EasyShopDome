<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f3f7f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#77e41e"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:background="@drawable/selector_ic_click"
            android:id="@+id/ib_return"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="#ffffff"
            android:text="登录"
            android:padding="2dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="4dp"
        android:hint="用户名"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/selector_ic_username"
        android:id="@+id/et_username" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="4dp"
        android:drawableLeft="@drawable/selector_ic_password"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="密码"
        android:id="@+id/et_password" />

    <Button
        android:id="@+id/bt_login"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="登录"
        android:enabled="false"
        android:textColor="#ffffff"
        style="@style/AppTheme.Button.EasyShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_register"
            android:textColor="#77e41e"
            android:text="快速注册"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>